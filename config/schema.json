{
  "Link": {
    "type": "object",
    "properties": {
      "id": { "type": ["integer", "string"], "readOnly": true },
      "creatorId": { "type": "string", "readOnly": true },
      "hash": { "type": "string", "minLength": 4, "maxLength": 25 },
      "originalUrl": { "type": "string" },
      "shortenedUrl": { "type": "string", "readOnly": true },
      "brandedUrl": { "type": "string", "readOnly": true },
      "meta": {
        "type": "object",
        "properties": {
          "author": { "type": "string" },
          "date": { "type": "string", "format": "date" },
          "description": { "type": "string" },
          "lang": { "type": "string" },
          "logo": { "type": "string", "format": "uri" },
          "publisher": { "type": "string" },
          "title": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "required": ["creatorId", "originalUrl"],
    "additionalProperties": false
  },
  "User": {
    "type": "object",
    "properties": {
      "id": { "type": "string", "readOnly": true },
      "role": {
        "type": "string",
        "enum": ["user", "superuser"],
        "default": "user"
      },
      "name": { "type": "string" },
      "deactivated": { "type": "boolean", "default": false }
    },
    "required": ["id", "name"],
    "additionalProperties": false
  }
}
